<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_submarine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jiadi.uw.SubmarineActivity">

    <ImageButton android:id="@+id/ButtonCus1"
        android:src="@drawable/sym_setting"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageButton android:id="@+id/btnRightDown"
        android:src="@drawable/rightdown"
        android:background="#00000000"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btnBack"
        android:layout_toRightOf="@+id/btnBack"
        android:layout_toEndOf="@+id/btnBack" />

    <ImageButton android:id="@+id/btnLeftDown"
        android:src="@drawable/leftdown"
        android:background="#00000000"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton android:id="@+id/btnBack"
        android:src="@drawable/down"
        android:background="#00000000"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btnLeftDown"
        android:layout_toRightOf="@+id/btnLeftDown"
        android:layout_toEndOf="@+id/btnLeftDown" />

    <ImageButton android:id="@+id/btnStop"
        android:src="@drawable/stop1"
        android:background="#00000000"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnLeftDown"
        android:layout_toRightOf="@+id/btnLeftDown"
        android:layout_toEndOf="@+id/btnLeftDown" />

    <ImageButton android:id="@+id/btnRight1"
        android:src="@drawable/right"
        android:background="#00000000"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnRightDown"
        android:layout_toRightOf="@+id/btnStop"
        android:layout_toEndOf="@+id/btnStop" />

    <ImageButton android:id="@+id/btnRightUp"
        android:src="@drawable/rightup"
        android:background="#00000000"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnStop"
        android:layout_toRightOf="@+id/btnForward"
        android:layout_toEndOf="@+id/btnForward" />

    <ImageButton android:id="@+id/btnForward"
        android:src="@drawable/up"
        android:background="#00000000"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnStop"
        android:layout_toRightOf="@+id/btnLeft1"
        android:layout_toEndOf="@+id/btnLeft1" />

    <ImageButton android:id="@+id/btnLeft1"
        android:src="@drawable/left"
        android:background="#00000000"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_above="@+id/btnLeftDown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton android:id="@+id/btnLeftUp"
        android:src="@drawable/leftup"
        android:background="#00000000"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_above="@+id/btnLeft1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton android:id="@+id/btnFloat"
        android:src="@drawable/floatup"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnDive"
        android:layout_toStartOf="@+id/btnDive"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/btnRightUp" />

    <ImageButton android:id="@+id/btnDive"
        android:src="@drawable/dive"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/checkBox1"
        android:layout_alignEnd="@+id/checkBox1"
        android:layout_alignTop="@+id/btnFloat" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重力感应"
        android:id="@+id/checkBox1"
        android:checked="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <ImageButton android:id="@+id/ButtonTakePic"
        android:src="@drawable/take_pic"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnForward"
        android:layout_toEndOf="@+id/btnForward" />

    <ImageView android:id="@+id/btnIndicator"
        android:src="@drawable/sym_indicator"
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnFloat"
        android:layout_alignBottom="@+id/ButtonTakePic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="机器状态：设备连接出错或未连接！\n设备电量：状态异常！\n"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ButtonCus1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="500dp"
        android:layout_height="270dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:background="@color/title_text_color" />

</RelativeLayout>
